<div class="mt-4">
    <form method="Post">
      <div class="mb-3">
        <label for="search-input" class="form-label">Từ khoá</label>
        <input type="text" name="q" class="form-control" id="search-input" placeholder="Nhập từ khoá...">
      </div>
      <div class="form-group">
        <label for="gender-input">Chọn giới tính</label>
        <select name="gender" class="form-control" id="gender-input">
          <option value="all">Tat ca</option>
          <option value="male">Nam</option>
          <option value="female">Nu</option>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Tìm kiếm</button>
    </form>
</div>